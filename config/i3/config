# Include
include $HOME/.config/i3/keybinds.conf
#include $HOME/.config/i3/displays.conf
include $HOME/.config/i3/execs.conf
include $HOME/.config/i3/style.conf

exec_always xrandr --output DP-0 --off --output DP-1 -- off --output DP-2 --off --output HDMI-0 --primary --mode 1920x1080 --rate 144 --pos 0x0 --rotate normal --output DP-3 --off --output DP-4 --mode 1920x1080 --pos 1920x0 --rotate normal

# Default modifier
set $mod Mod4

# Title font
font pango:Noto Sans 8

# Drag floating windows
floating_modifier $mod

# Move tiling windows
tiling_drag modifier titlebar

# Define names for workspaces
# 一 二 三 四 五 六 七 八 九 十
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Workspaces
set $monitor1 HDMI-0
set $monitor2 DP-4
workspace $ws1 output $monitor1
workspace $ws2 output $monitor1
workspace $ws3 output $monitor1
workspace $ws4 output $monitor1
workspace $ws5 output $monitor1
workspace $ws6 output $monitor2
workspace $ws7 output $monitor2
workspace $ws8 output $monitor2
workspace $ws9 output $monitor2
workspace $ws10 output $monitor2