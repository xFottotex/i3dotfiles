configuration {
    font: "Inter SemiBold 12";
}

* {
    spacing: 0;
}

window {
    width: 600;
    height: 110;
    location: south;
    background-color: @background;
    border-radius: 18 18 0 0;
}

mainbox {
    children: [ box-buttons ];
    background-color: inherit;
    padding: 15 20;
}

box-buttons {
    children: [ listview ];
    orientation: horizontal;
    background-color: inherit;
}

listview {
    lines: 1;
    columns: 6;
    cycle: true;
    background-color: inherit;
    spacing: 15;
}

element {
    background-color: inherit;
}

element-text {
	font: "JetBrainsMono NFM 30";
    background-color: @raised;
    color: @foreground-alt;
    horizontal-align: 0.5;
    border-radius: 100%;
    padding: 13 0;
    cursor: pointer;
}

element-text.selected {
    background-color: @urgent;
    color: @foreground;
}
